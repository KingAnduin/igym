<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_item_user_list"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    app:cardBackgroundColor="@color/background_white_FA"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">
        <com.example.thinkpad.icompetition.view.widget.AsyncImageView
            android:id="@+id/aiv_search_headimage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher"/>
        <RelativeLayout
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/tv_search_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未编辑"
                android:layout_alignParentTop="true"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_search_user_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="普通用户"
                android:layout_alignParentBottom="true"
                android:textSize="14sp"/>
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>