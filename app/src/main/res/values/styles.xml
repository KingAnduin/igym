<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/icompetition_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- 设置Toolbar菜单文字的大小  -->
    <style name="ToolbarTheme" parent="Widget.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/background_white_FF</item> <!--颜色-->
        <item name="android:textSize">14sp</item> <!--字体大小-->
    </style>

</resources>
